<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <labs.course.modernartui.RectangleActivity
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:id="@+id/rectangle_view"
        app:rectangle_color="@android:color/holo_blue_light"
        app:rectangle_id="100"
        app:rectangle_width="350"
        app:rectangle_height="524">
    </labs.course.modernartui.RectangleActivity>

    <SeekBar
    android:id="@+id/color_seekbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    />

</LinearLayout>
